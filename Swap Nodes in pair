class Solution {
public:
    ListNode* swapPairs(ListNode* head) {
        if(!head || !head->next) return head;

        ListNode* prev = nullptr;
        ListNode* cur = head;
        ListNode* ansHead = head->next;

        while(cur && cur->next){
            if(prev){
                prev->next = cur->next;
            }

            ListNode* nxtblockBeg = cur->next->next;
            cur->next->next = cur;
            cur->next = nxtblockBeg;

            prev = cur;
            cur = nxtblockBeg;
        }

        return ansHead;
    }
};
